# COMMONLY USED PATHS
myatv() { cd $D_MYATV ; }


# COMMON
e() { exit ; }
reload() { reload_zshrc ; }       # zsh/fns
t(){ touch $1 ; echo "${I_TICK} Touched new file: "$1 ; ls ; }
h() { history ; }
hr() { history | tail -n 20 ; }
v() { vim $@ ; }
mv() { command mv -i -v $@ ; }
cp() { command cp -i -v -rf $@ ; }
ln() { command ln -i -v $@ ; }

