  // Example:
  "print-to-console": {
    "description": "Log output to console.",
    "prefix": "\\console-log",
    "body": ["console.log('$1');", "$2"]
  },
  "function-state": {
    "description": "Simple function with state passage.",
    "prefix": "\\function-state",
    "body": ["function $1name(state){", "  $2", "  return state;", "}"]
  },
  "promise-return-resolve": {
    "description": "Return promise resolve.",
    "prefix": "\\promsie-resolve",
    "body": ["return Promise.resolve(${1:state}).then($2);", "$0"]
  },
  "promise-catch": {
    "description": "Promise .catch().",
    "prefix": "\\promsie-catch",
    "body": [
      ".catch(${1:handleExeptions}.bind(state));",
      "$0function ${1:handleExeptions}(error) {",
      "  const state = this;",
      "  throw new Error(`${${2:state.moduleName}} Error: ${error.message}`);  ",
      "}",
      ""
    ]
  },
  "promise-return-promisify": {
    "description": "Return promise resolve.",
    "prefix": "\\promisify",
    "body": ["return new Promise((resolve, reject) => {", "  $0", "});"]
  },
  "test-unit": {
    "description": "Ava test unit.",
    "prefix": "\\test",
    "body": [
      "test(\"$1\", t => {",
      "  const msg = \"should return $1\";",
      "  const actual = $0true;",
      "  const expected = true;",
      "  t.is(actual, expected, msg);",
      "});"
    ]
  },
  "test-unit-async": {
    "description": "Ava test aync unit.",
    "prefix": "\\test-async",
    "body": [
      "test(\"$1\", async t => {",
      "  const msg = \"should return $1\";",
      "  const actual = await $0true;",
      "  const expected = true;",
